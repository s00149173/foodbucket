@model FoodBucket.Models.User

<div>

    @{
        ViewBag.Title = "Login";
    }

    <h2 class="text-center">Login</h2>
    <h3 class="text-center text-info">
         @ViewBag.Bla
            @TempData["ConfirmationMessage"]        
    </h3>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "Login failed. Check your login details.", new {@class="text-danger text-center"})
        <div class="col-md-offset-4 col-md-4">
            <form role="form">
            
                <div class="form-group">
                    @Html.LabelFor(u => u.UserName)
                    @Html.TextBoxFor(u => u.UserName, new {@class="form-control"})
                    @Html.ValidationMessageFor(u => u.UserName)
                </div>
           
                <div class="form-group">
                    @Html.LabelFor(u => u.Password)
                    @Html.PasswordFor(u => u.Password,new {@class="form-control"})
                    @Html.ValidationMessageFor(u => u.Password)
                </div>
          
                <input class="btn btn-default" type="submit" value="Log In" />
        
            </form>
        </div>
    }
</div>
@section Scripts {
    
}