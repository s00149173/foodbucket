@model FoodBucket.Recipies

@{
    ViewBag.Title = "Details";
}

<h2>@ViewBag.Message</h2>

<fieldset>
    <div>
         <img class="img-responsive" src="@Url.Action("ShowImg", "Recipes", new {id=Model.id_recipe})"/>
    </div>

    <div class="display-field">
        <h2>@Html.DisplayFor(model => model.title)</h2>
    </div>

    <div class="display-field">
        @Html.DisplayFor(model => model.description)
    </div>

    <div class="display-label">
        <h3> @Html.DisplayNameFor(model => model.ingredients)</h3>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ingredients)
    </div>

    <div class="display-label">
        <h3> @Html.DisplayNameFor(model => model.preparation)</h3>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.preparation)
    </div>
 

</fieldset>
<p>
    @Html.ActionLink("Back to List", "Index", new {id=Model.id_country})
</p>
